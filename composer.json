{
    "description": "HTML content nodes for the Neos CMS",
    "name": "neosidekick/htmlcontent",
    "type": "neos-plugin",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "flow",
        "neos",
        "fusion",
        "html"
    ],
    "require": {
        "ext-dom": "*",
        "ext-libxml": "*",
        "neos/neos": "~5.0 || ~7.0 || ~8.0 || dev-master"
    },
    "authors": [
        {
            "name": "Roland Sch\u00fctz",
            "email": "rs@codeq.at",
            "homepage": "https://codeq.at",
            "role": "Developer"
        },
        {
            "name": "Felix Gradinaru",
            "email": "fg@codeq.at",
            "homepage": "https://codeq.at",
            "role": "Developer"
        }
    ],
    "archive": {
        "exclude": [
            ".editorconfig",
            ".gitattributes",
            ".github",
            ".gitignore"
        ]
    },
    "autoload": {
        "psr-4": {
            "NEOSidekick\\HtmlContent\\": "Classes"
        }
    },
    "extra": {
        "neos": {
            "package-key": "NEOSidekick.HtmlContent"
        },
        "applied-flow-migrations": []
    },
    "replace": {
        "codeq/htmlcontent": "self.version"
    }
}
